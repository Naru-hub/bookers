<h1>Editing Book</h1>

<%= form_with model:@book,local:true do |f|%>

 <% if @book.errors.any? %>
  <%= @book.errors.count %>errors
  <% @book.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
  <% end %>
<div class="field">
<label>Title</label>
<br><%= f.text_field :title %><br>
</div>

<div class="field">
<label>Body</label>
<br><%= f.text_area :body %><br>
</div>

<div class="actions">
<br><%= f.submit 'Update Book' %><br>

<% end %><br>
</div>

<%= link_to("Show",book_path) %>

<%= "|" %>

<%= link_to("Back","/books") %>